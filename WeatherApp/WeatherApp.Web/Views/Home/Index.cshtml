@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row row-height">
        <div class="col-md-6 text-center current-wrapper">
            <div class="p-4">
                <form id="locationForm">
                    @Html.AntiForgeryToken()
                    <!-- ko foreach: vars.weather() -->
                    <h1>CURRENT</h1>
                    <hr>
                    <h3><!-- ko text: name --><!-- /ko -->, <small data-bind="text: country"></small></h3>
                    <h1 class="tempCel" data-bind="text: tempCel + ' °C'"></h1>
                    <div class="row">
                        <div class="col-md-6 text-md-right text-center pr-md-5">
                            <p> <img src="https://img.icons8.com/office/40/000000/temperature.png"> <span data-bind="text: tempMax"></span> °C</p>
                            <p> <img src="https://img.icons8.com/ultraviolet/40/000000/temperature.png"> <span data-bind="text: tempMin"></span> °C</p>
                        </div>
                        <div class="col-md-6 text-md-left text-center pl-md-5">
                            <p><img src="https://img.icons8.com/plasticine/100/000000/sunrise.png" width="40"> - <span data-bind="text: sunrise"></span></p>
                            <p><img src="https://img.icons8.com/plasticine/100/000000/sunset.png" width="40"> - <span data-bind="text: sunset"></span></p>
                        </div> 
                    </div>
                    <!-- /ko -->
                    <input type="text" type="submit" data-bind="textInput: $root.vars.location" class="form-control changeLocation" placeholder="Change city...">
                </form>
            </div>

        </div>
        <div class="col-md-6 text-center forecast-wrapper">
            <div class="p-4">
                <!-- ko foreach: vars.weather() -->
                    <h1>FORECAST</h1>
                    <hr>
                    <div class="float-left text-left today-wrapper">        
                        <h3>
                            Today
                        </h3>
                        
                        <!-- ko foreach: weathers() -->
                            <!-- ko if: $index() == 0 -->
                            <p>
                                <!-- ko text: main --><!-- /ko -->
                                <br>
                                <small data-bind="text: description"></small>
                            </p>
                            <!-- /ko -->
                        <!-- /ko -->
                        <p>Humidity <span data-bind="text: humidity + '%'"></span></p>
                        <p>Wind <span data-bind="text: windspeed + 'kph'"></span></p>
                    </div>
                
                    <!-- ko foreach: weathers() -->
                        <!-- ko if: $index() == 0 -->
                        <img data-bind="attr: {src: 'http://openweathermap.org/img/wn/'+ icon +'.png'}">
                        <!-- /ko -->
                    <!-- /ko -->
                <!-- /ko -->
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script type="module" src="~/assets/js/main.js"></script>
}